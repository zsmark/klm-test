<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create_booking_seq" author="mzsido">
        <createSequence sequenceName="booking_id_seq" incrementBy="1" startValue="0"/>
    </changeSet>
    <changeSet id="create_booking_table" author="mzsido">
        <createTable tableName="booking">
            <column name="id" defaultValueSequenceNext="booking_id_seq" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pax_name" type="varchar2(255)">
                <constraints nullable="false"/>
            </column>
            <column name="departure" type="datetime">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
